{
	"files": ["./src/index.ts"],
	"compilerOptions": {
		"outDir": "dist",
		"target": "ES2022",
		"lib": [ "ES2017", "es2019", "ES2021.String" ],
		"esModuleInterop" : true,
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"module": "commonjs",
		"sourceMap": true,
		// "rootDir": ".",
		"moduleResolution": "node",
		"declaration": true,
		"declarationMap": true,
		"keyofStringsOnly": true,
		"strict": true,
		"paths": { 
			"@common/*": ["../commonTypes/*"], 
		},
	},
	"exclude": [
		"dist",
		"DBoGenerated.ts",
		"*.conf"
	],
	"include": ["init.sql"]
} 